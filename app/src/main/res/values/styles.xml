<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppBottomSheetTheme" parent="BottomSheetDialog" />

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalDialogStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="AppModalDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottomsheet_dialog</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>